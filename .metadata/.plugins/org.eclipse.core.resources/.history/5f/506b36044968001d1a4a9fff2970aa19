package com.keilacouto.provanivel2.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import com.keilacouto.provanivel2.model.Employee;
import com.keilacouto.provanivel2.repositories.EmployeeRepository;

public class EmpoyeeServiceImpl implements EmployeetService{
	
    private EmployeeRepository departmentRepository;
	
	public EmpoyeeServiceImpl(@Autowired EmployeeRepository departmentRepository) {
		this.departmentRepository = departmentRepository;
	}
	
	@Override
	public Employee save(Employee department) {
		return departmentRepository.save(department);
	}

	@Override
	public List<Employee> fetchAll() {
		 return departmentRepository.findAll();
	}

	@Override
	public Employee update(Employee department, Long departmentId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void deleteById(Long departmentId) {
		departmentRepository.deleteById(departmentId);		
	}

}
